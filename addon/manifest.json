{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "automatic_dictionary_extension@jordi_beltran.net",
            "strict_min_version": "73.0"
        }
    },
    "name": "Automatic Dictionary",
    "description": "Extension that remembers the language of the email when composing.",
    "version": "2.0.0",
    "default_locale": "en",

    "options_ui": {
        "open_in_tab": true,
        "page": "preferences.html"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

